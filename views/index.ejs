    <div class="container">
        <div class="row">
          <div class="col-1">
            IITJ important websites
          </div>


          <div class="col-10">
            <div class="mainContent">
                <div class="wholeAddQuestion">
                  <h4>Add your question here âœ…</h4>
                    <form action="/" method="post">
                      <div class="row">
                      <div class="col-8"><textarea class="add_question" type="text" rows="4"   placeholder="What's on your mind?" name="newQues" required autocomplete="off"></textarea></div>
                      <div class="col-sm"><button type="submit" class="btn btn-light">Post</button></div>
                      <div class="col-3"><input type="checkbox" name="asAnonymous" id="quesAdding"><label for="quesAdding"> Post as anonymous?</label>
                            </div>
                          
                      </div>
                    </form>
                </div>
                <form action="/1" method="get" class="page-number-button"><button class="orient">1</button></form>
                <form action="/2" method="get" class="page-number-button"><button class="orient">2</button></form>
                <form action="/3" method="get" class="page-number-button"><button class="orient">3</button></form>
                <form action="/4" method="get" class="page-number-button"><button class="orient">4</button></form>
                <form action="/5" method="get" class="page-number-button"><button class="orient">5</button></form>
                <% for(var i =0 ; i< numberOfQues ; i++) { %>
                <div class="singleQuestion">
                    <p class="userQuestion"><%= question[question.length-i-1-(pageNum-1)*100].userWithQuestion %> <%= question[question.length-i-1-(pageNum-1)*100].date %> </p>
                    <p class="question"> <%= question[question.length-i-1-(pageNum-1)*100].questionText %> </p>
                
                    <form action="/comment" method="post">
                        <div class="add_comment row">
                        <div class="col-12"><textarea type="text" name="commentText" required placeholder="Add a comment" autocomplete="off" rows="3" cols="40" ></textarea>
                        <button type="submit" value="<%= question[question.length-i-1-(pageNum-1)*100]._id %>" name="submitComment" class="btn btn-light">Add</button></div>
                        </div>
                    </form>
                    <button id="<%= question[question.length-i-1-(pageNum-1)*100]._id %>" class="comment-show" >Comments (<%= question[question.length-i-1-(pageNum-1)*100].comments.length %>)</button>
                    <div class="<%= question[question.length-i-1-(pageNum-1)*100]._id %> commDiv" >
                    <% for(var j=0;j<question[question.length-i-1-(pageNum-1)*100].comments.length;j++){ %>
                        <div class="singleComment">
                            <p class="userComment"> <%= question[question.length-i-1-(pageNum-1)*100].comments[question[question.length-i-1-(pageNum-1)*100].comments.length-j-1].userName %>  <%= question[question.length-i-1-(pageNum-1)*100].comments[question[question.length-i-1-(pageNum-1)*100].comments.length-j-1].commentDate %> </p>
                            <p class="comment"> <%= question[question.length-i-1-(pageNum-1)*100].comments[question[question.length-i-1-(pageNum-1)*100].comments.length-j-1].commentText %> </p>
                            <hr width="70%">
                        </div>
                    <%}%>
                    </div>
                </div>
                <% } %>
                <form action="/1" method="get" class="page-number-button"><button class="orient">1</button></form>
                <form action="/2" method="get" class="page-number-button"><button class="orient">2</button></form>
                <form action="/3" method="get" class="page-number-button"><button class="orient">3</button></form>
                <form action="/4" method="get" class="page-number-button"><button class="orient">4</button></form>
                <form action="/5" method="get" class="page-number-button"><button class="orient">5</button></form>
