<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IITJ Forum & Help</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
</head>
<body>
    <div class="Title">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
              <h1 class="display-4">IITJ Forum</h1>
              <p class="lead">Where every query meets an answerer.</p>
            </div>
          </div>
    </div>

    <div class="mainContent">
        <div class="wholeAddQuestion">
            <form action="/" method="post">
                <input class="add_question" type="text" placeholder="What's in your mind" name="newQues" required autocomplete="off">
                <button type="submit">Submit</button>
                <label for="quesAdding">Post as anonymous?</label>
                    <input type="checkbox" name="asAnonymous" id="quesAdding">
            </form>
        </div>
        <form action="/1" method="get" class="page-number-button"><button>1</button></form>
        <form action="/2" method="get" class="page-number-button"><button>2</button></form>
        <form action="/3" method="get" class="page-number-button"><button>3</button></form>
        <form action="/4" method="get" class="page-number-button"><button>4</button></form>
        <form action="/5" method="get" class="page-number-button"><button>5</button></form>
        <% for(var i =0 ; i< numberOfQues ; i++) { %>
        <div class="singleQuestion">
            <p class="userQuestion"><%= question[question.length-i-1-(pageNum-1)*100].userWithQuestion %></p>
            <p class="question"> <%= question[question.length-i-1-(pageNum-1)*100].questionText %> </p>
        
            <form action="/comment" method="post">
                <div>
                <input type="text" name="commentText" required  placeholder="Add a comment" autocomplete="off">
                <button type="submit" value="<%= question[question.length-i-1-(pageNum-1)*100]._id %>" name="submitComment">Add</button>
                
                </div>
            </form>
            <button id="<%= question[question.length-i-1-(pageNum-1)*100]._id %>" class="comment-show">Comments (<%= question[question.length-i-1-(pageNum-1)*100].comments.length %>)</button>
            <div class="<%= question[question.length-i-1-(pageNum-1)*100]._id %> commDiv" >
            <% for(var j=0;j<question[question.length-i-1-(pageNum-1)*100].comments.length;j++){ %>
                <div class="singleComment">
                    <p class="userComment"> <%= question[question.length-i-1-(pageNum-1)*100].comments[question[question.length-i-1-(pageNum-1)*100].comments.length-j-1].userName %></p>
                    <p class="comment"> <%= question[question.length-i-1-(pageNum-1)*100].comments[question[question.length-i-1-(pageNum-1)*100].comments.length-j-1].commentText %> </p>
                    <hr width="70%">
                </div>
            <%}%>
            </div>
        </div>
        <% } %>
        <form action="/1" method="get" class="page-number-button"><button>1</button></form>
        <form action="/2" method="get" class="page-number-button"><button>2</button></form>
        <form action="/3" method="get" class="page-number-button"><button>3</button></form>
        <form action="/4" method="get" class="page-number-button"><button>4</button></form>
        <form action="/5" method="get" class="page-number-button"><button>5</button></form>
    </div>
    <script src="javascript/script.js"></script>
</body>
</html>
