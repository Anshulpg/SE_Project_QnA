<body>
    <div class="mainContent">
        <form action="/" method="post">
            <input class="add_question" type="text" placeholder="What's in your mind" name="newQues" required>
            <button type="submit">Submit</button>
        </form>
        <form action="/1" method="get"><button>1</button></form>
        <form action="/2" method="get"><button>2</button></form>
        <form action="/3" method="get"><button>3</button></form>
        <form action="/4" method="get"><button>4</button></form>
        <form action="/5" method="get"><button>5</button></form>
        <% for(var i =0;i<question.length;i++) {%>
            <p class="question"> <%= question[question.length-i-1].questionText %> </p>
            <form action="/comment" method="post">
                <div>
                <input type="text" name="commentText" required  placeholder="Add a comment">
                <!-- <input type="text" name="justID" value="44" height="0px" width="0px">
                <input type="checkbox" name="checkbox" value="89127398" onchange="this.form.submit()"> -->
                <button type="submit" value="<%= question[question.length-i-1]._id %>" name="submitComment">Add</button>
                </div>
            </form>
            <% for(var j=0;j<question[question.length-i-1].comments.length;j++){ %>
                <p class="comment"> <%= question[question.length-i-1].comments[question[question.length-i-1].comments.length-j-1].commentText %> </p>
                <hr width="70%">
            <%}%>
            
